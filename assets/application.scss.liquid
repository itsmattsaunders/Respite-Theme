$Raleway: "Raleway", sans-serif;
$white: #f7f7f7;
$black: #0e1111;
$grey: #8e9aaf;
$lavendar: #cbc0d3;
$pink: #efd3d7;
$mist: #dee2ff;
$tablet: 768px;
$desktop: 1024px;

@mixin tablet {
  @media (min-width: #{$tablet}) and (max-width: #{$desktop - 1px}) {
    @content;
  }
}

@mixin desktop {
  @media (min-width: #{$desktop}) {
    @content;
  }
}

*,
body,
html {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body,
html {
  font-family: $Raleway;
  height: 100%;
  width: 100%;
  max-width: 1440px;
}

a:visited{
  color: inherit;
}

// Navigation Styles
nav {
  width: 100%;
  height: 50px;
  background-color: $black;
  color: $pink;
  position: absolute;
  z-index: 1;

  @include tablet() {
  }

  @include desktop() {
  }
}

.sticky {
  position: fixed;
  top: 0;
  width: 100%;
}

.sticky + .content {
  padding-top: 60px;
}

a {
  text-decoration: none;
}

.fas {
  color: $pink;
  position: relative;
  bottom: 15px;
  right: 5px;
  font-size: 22px;
  float: right;
  margin: 5px;
  padding: 5px;
  z-index: 2;

  @include tablet() {
    bottom: 65px;
    right: 15px;
  }

  @include desktop() {
    bottom: 65px;
    right: 15px;
  }
}

#nav-title {
  display: none;

  @include tablet() {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 25px;
    text-align: center;
    font-weight: 600;
    position: relative;
    bottom: 8px;
  }

  @include desktop() {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 25px;
    text-align: center;
    font-weight: 600;
    position: relative;
    bottom: 8px;
  }
}

#menu-toggle {
  display: flex;
  flex-direction: column;
  position: relative;
  top: 15px;
  left: 15px;
  width: 20px;
  z-index: 9;
  -webkit-user-select: none;
  user-select: none;
}

#menu-toggle input {
  display: flex;
  width: 40px;
  height: 32px;
  position: absolute;
  cursor: pointer;
  opacity: 0;
  z-index: 99;
}

#menu-toggle span {
  display: flex;
  width: 29px;
  height: 2px;
  margin-bottom: 5px;
  position: relative;
  background: $pink;
  border-radius: 3px;
  z-index: 9;
  transform-origin: 5px 0px;
  transition: transform 0.5s cubic-bezier(0.77, 0.2, 0.05, 1),
    background 0.5s cubic-bezier(0.77, 0.2, 0.05, 1), opacity 0.55s ease;
}

#menu-toggle span:first-child {
  transform-origin: 0% 0%;
}

#menu-toggle span:nth-last-child(2) {
  transform-origin: 0% 100%;
}

#menu-toggle input:checked ~ span {
  opacity: 1;
  transform: rotate(45deg) translate(-3px, -1px);
  background: #36383f;
}

#menu-toggle input:checked ~ span {
  opacity: 1;
  transform: rotate(45deg) translate(-3px, -1px);
  background: $black;
  z-index: 10;
}
#menu-toggle input:checked ~ span:nth-last-child(3) {
  opacity: 0;
  transform: rotate(0deg) scale(0.2, 0.2);
}

#menu-toggle input:checked ~ span:nth-last-child(2) {
  transform: rotate(-45deg) translate(0, -1px);
}

#menu {
  position: absolute;
  z-index: 9;
  width: 220px;
  height: 100vh;
  box-shadow: 0 0 10px #85888c;
  margin: -50px 0 0 -50px;
  padding: 50px;
  padding-top: 125px;
  background-color: $white;
  -webkit-font-smoothing: antialiased;
  transform-origin: 0% 0%;
  transform: translate(-100%, 0);
  transition: transform 0.5s cubic-bezier(0.77, 0.2, 0.05, 1);
}

#menu li {
  padding: 10px 0;
  transition-delay: 2s;
}

#menu-toggle input:checked ~ ul {
  transform: none;
}

#ProductPhotoImg {
  display: none;
}

//Hero Styles

#hero-img {
  width: 100%;
  max-height: 300px;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;

  @include tablet(){
    max-height: 400px;
  }

  @include desktop(){
    max-height: 500px;
  }
}

.hero-text {
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: $black;
}
